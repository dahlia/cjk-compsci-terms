{
  "tasks": {
    "build": "deno run --allow-read --allow-write src/build.ts",
    "dev": "deno run --allow-read --allow-write --watch src/build.ts",
    "test": "deno test --allow-read",
    "check": "deno check src/**/*.ts src/**/*.tsx",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/"
  },
  "imports": {
    "@std/yaml": "jsr:@std/yaml@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/cli": "jsr:@std/cli@^1",
    "@std/assert": "jsr:@std/assert@^1",
    "es-hangul": "npm:es-hangul@^2.3.8",
    "hanja": "npm:hanja@^1.1.5",
    "kakasi": "npm:kakasi@^1.0.0",
    "kuroshiro": "npm:kuroshiro@^1.2.0",
    "kuroshiro-analyzer-kuromoji": "npm:kuroshiro-analyzer-kuromoji@^1.1.0",
    "opencc-js": "npm:opencc-js@^1.0.5",
    "pinyin": "npm:pinyin@^4.0.0",
    "to-jyutping": "npm:to-jyutping@^3.1.1",
    "markdown-it": "npm:markdown-it@^14.1.0",
    "markdown-it-deflist": "npm:markdown-it-deflist@^3.0.0",
    "markdown-it-footnote": "npm:markdown-it-footnote@^4.0.0",
    "jsx-runtime/jsx-runtime": "./src/jsx-runtime/index.ts"
  },
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-runtime"
  },
  "exclude": [
    ".venv/",
    "public_html/",
    "bin/",
    "hooks/"
  ]
}
